<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">

    <include
        android:id="@+id/community_include"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/community_include"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/stock_info_button"
            android:layout_width="153dp"
            android:layout_height="31dp"
            android:text="종목정보"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:layout_constraintLeft_toLeftOf="@+id/constraint"
            app:layout_constraintRight_toLeftOf="@id/free_board_button"
            />

        <TextView
            android:id="@+id/free_board_button"
            android:layout_width="153dp"
            android:layout_height="31dp"
            android:text="자유게시판"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:layout_constraintLeft_toRightOf="@id/stock_info_button"
            app:layout_constraintRight_toRightOf="@id/constraint"
            />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="266.3dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="검색"
            app:layout_constraintTop_toBottomOf="@id/stock_info_button"
            app:layout_constraintLeft_toLeftOf="@id/constraint"
            app:layout_constraintRight_toLeftOf="@id/search_button"
            />

        <TextView
            android:id="@+id/search_button"
            android:layout_width="39.7dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toBottomOf="@id/stock_info_button"
            app:layout_constraintRight_toRightOf="@id/constraint"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_search"
            tools:listitem="@layout/item_stock_info"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
