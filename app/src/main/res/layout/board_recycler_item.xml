<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/board_item_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/board_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ant_logo_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/board_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/board_image"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="닉네임"
        />
    <TextView
        android:id="@+id/board_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="2분 전"
        app:layout_constraintLeft_toRightOf="@id/board_nick_name"
        app:layout_constraintTop_toTopOf="@id/board_nick_name"
        />

    <TextView
        android:id="@+id/board_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/board_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/board_image"
        />

    <ImageButton
        android:id="@+id/board_like_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/like_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTintMode="add"
        android:layout_marginTop="20dp"
        android:backgroundTint="?android:attr/panelBackground"
        app:layout_constraintTop_toBottomOf="@id/board_content"
        />
    <TextView
        android:id="@+id/board_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요"
        app:layout_constraintLeft_toRightOf="@id/board_like_button"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toBottomOf="@id/board_content"
        />
    <TextView
        android:id="@+id/board_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/board_content"
        app:layout_constraintLeft_toRightOf="@id/board_like_count"
        android:background="@drawable/comment"
        app:layout_constraintTop_toTopOf="@id/board_like_button"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 1"
        app:layout_constraintTop_toTopOf="@id/board_like_count"
        app:layout_constraintLeft_toRightOf="@id/board_comment"
        android:layout_marginLeft="3dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>