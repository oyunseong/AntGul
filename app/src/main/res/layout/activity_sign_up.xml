<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/like_stock_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디 ( 이메일 )"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/like_stock_title"
        />
    <EditText
        android:id="@+id/et_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="닉네임"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 ( 8자 이상 )"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nick_name"
        />
    <EditText
        android:id="@+id/et_confirm_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        app:layout_constraintTop_toBottomOf="@id/et_pw"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitStart"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/et_confirm_pw"
        app:layout_constraintRight_toRightOf="@id/et_confirm_pw"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입시, 개미굴 운영정책과 개인정보처리방침에 동의한 것으로 간주합니다."
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/sign_up_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입 성공"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_pw"
        android:gravity="center"
        android:background="@color/purple_200"
        />



</androidx.constraintlayout.widget.ConstraintLayout>