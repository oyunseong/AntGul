<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_background">

    <include
        android:id="@+id/detail_appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/board_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ant_logo_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_appbar" />

    <TextView
        android:id="@+id/board_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="닉네임"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/board_image"
        app:layout_constraintTop_toBottomOf="@id/detail_appbar" />

    <TextView
        android:id="@+id/board_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="2분 전"
        app:layout_constraintLeft_toRightOf="@id/board_nick_name"
        app:layout_constraintTop_toTopOf="@id/board_nick_name" />

    <TextView
        android:id="@+id/board_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/board_content"
        app:layout_constraintTop_toBottomOf="@id/board_image" />

    <ImageButton
        android:id="@+id/board_like_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/like_button"
        android:backgroundTint="?android:attr/panelBackground"
        android:backgroundTintMode="add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_content" />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="24dp"
        android:text="좋아요"
        app:layout_constraintLeft_toRightOf="@id/board_like_button"
        app:layout_constraintTop_toBottomOf="@id/board_content" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/comment"
        app:layout_constraintLeft_toRightOf="@id/like_count"
        app:layout_constraintTop_toBottomOf="@id/board_content"
        app:layout_constraintTop_toTopOf="@id/board_like_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="댓글 2"
        app:layout_constraintLeft_toRightOf="@id/comment"
        app:layout_constraintTop_toTopOf="@id/like_count" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_board_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/board_like_button"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/item_comment" />


</androidx.constraintlayout.widget.ConstraintLayout>